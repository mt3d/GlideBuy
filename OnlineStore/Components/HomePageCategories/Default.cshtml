@using GlideBuy.Models
@using GlideBuy.Support.Mvc.Routing
@using GlideBuy.Web.Models.Catalog
@model IList<CategoryModel>
@inject ICustomUrlHelper CustomUrlHelper

@if (Model.Count > 0)
{
	<div class="category-grid home-page-category-grid">
		<div class="item-grid">
			@foreach (var item in Model)
			{
				<div class="item-box">
					<div class="category-item">
						<h2 class="title">
							@*
								Calculates the correct URL format based on the routing
								configuration (and the entity's search engine name. The SeName
								is the slug stored in the database for that category.)
							*@
							<a
								@* href="@(Url.RouteUrl<Category>(new { SeName = item.SeName }))" *@
									href="@(await CustomUrlHelper.RouteGenericUrlAsync<Category>(new { SeName = item.SeName }))"
									title="">
								@item.Name
							</a>
						</h2>
						<div class="picture">
							<a href="">
								<img src="/images/category.jpg"/>
							</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
}