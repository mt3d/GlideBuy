@using GlideBuy.Web.Models.Catalog
@model IList<CategoryModel>

@if (Model.Count > 0)
{
	<div class="category-grid home-page-category-grid">
		<div class="item-grid">
			@foreach (var item in Model)
			{
				<div class="item-box">
					<div class="category-item">
						<h2 class="title">
							<a href="" title="">
								@item.Name
							</a>
						</h2>
						<div class="picture">
							<a href="">
								<img src="/images/category.jpg"/>
							</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
}