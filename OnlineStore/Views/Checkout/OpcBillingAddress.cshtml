@using GlideBuy.Web.Models.Checkout
@model CheckoutBillingAddressModel

<div class="checkout-data">
	@if (Model.ShipToSameAddressAllowed)
	{
		<div class="section ship-to-same-address">
			<p class="selector">
				<input asp-for="ShipToSameAddress" />
				<label asp-for="ShipToSameAddress">Ship to Same Address</label>
			</p>
		</div>
	}

	@if (Model.ExistingAddresses.Count > 0)
	{
		<div class="select-billing-address">

		</div>
	}

	<div class="section new-billing-address" id="new-billing-address-form">

		@*TODO: Check for EU Vat*@

		<div class="enter-address">
			<div asp-validation-summary="ModelOnly" class="message-error"></div>
			@{
				@await Html.PartialAsync("_CreateOrUpdateAddress", Model.BillingNewAddress)
			}
		</div>
	</div>
</div>